{
  "name": "chessboard-vanilla-v2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "lsof -ti:5173 | xargs -r kill -9 2>/dev/null; concurrently --kill-others --prefix \"{name}\" --names \"VITE,TUNNEL\" \"npm run dev:local\" \"npm run dev:ngrok\"",
    "dev:local": "vite",
    "dev:ngrok": "sleep 3 && ngrok http 5173 --domain=eager-terrier-especially.ngrok-free.app",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "ngrok": "ngrok http 5173",
    "ngrok:url": "curl -s http://localhost:4040/api/tunnels | grep -o '\"public_url\":\"[^\"]*\"' | cut -d'\"' -f4",
    "tunnel:url": "echo 'Permanent URL: https://eager-terrier-especially.ngrok-free.app'",
    "cloudflared": "cloudflared tunnel --url http://localhost:5173 --no-autoupdate"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@react-spring/web": "^10.0.1",
    "chess.js": "^1.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "howler": "^2.2.4",
    "lucide": "^0.542.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "stockfish.js": "^10.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "use-sound": "^5.0.0",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/howler": "^2.2.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
