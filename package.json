{
  "name": "responsive-chessboard",
  "version": "1.0.0",
  "description": "Modern, responsive React chessboard component with comprehensive chess logic",
  "keywords": [
    "react",
    "chess",
    "chessboard",
    "typescript",
    "npm-package",
    "responsive"
  ],
  "author": "Chess Developer <dev@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/responsive-chessboard.git"
  },
  "main": "dist/responsive-chessboard.umd.js",
  "module": "dist/responsive-chessboard.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "assets",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/responsive-chessboard.es.js",
      "require": "./dist/responsive-chessboard.umd.js"
    },
    "./styles": {
      "types": "./dist/styles.d.ts",
      "default": "./dist/style.css"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "dev:both": "concurrently --names \"COMPONENT,EXAMPLE\" --prefix-colors \"blue,green\" \"npm run dev\" \"npm run dev:example\"",
    "build": "tsc -p tsconfig.build.json",
    "build:prod": "tsc -p tsconfig.build.json && vite build",
    "build:for-example": "npm run build:prod && cd example-v2 && npm install && npm run build",
    "build:with-example": "npm run build:prod && npm run build:example:prod",
    "build:lib": "rollup -c",
    "build:example": "cd example-v2 && npm run build",
    "build:example:prod": "cd example-v2 && npm run build:prod",
    "dev:example": "cd example-v2 && npm run dev",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "prepublishOnly": "npm run build:lib"
  },
  "dependencies": {
    "@react-spring/web": "^9.7.3",
    "chess.js": "^1.0.0-beta.8"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.6",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@types/tough-cookie": "^4.0.5",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "rollup": "^4.1.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
