/* Test CSS file for theme color generator */

.theme-red {
  --background: #ffffff;
  --foreground: #212121;
  --primary: #ef4444;
  --secondary: #64748b;
  --accent: #f87171;
  --radius: 0.5rem;
}

.theme-blue {
  --background: #ffffff;
  --foreground: #1f2937;
  --primary: #3b82f6;
  --secondary: #6b7280;
  --accent: #60a5fa;
  --radius: 0.75rem;
}

.theme-green {
  --background: #ffffff;
  --foreground: #111827;
  --primary: #10b981;
  --secondary: #374151;
  --accent: #34d399;
  --radius: 0.5rem;
}

.theme-purple {
  --background: #ffffff;
  --foreground: #1f2937;
  --primary: #8b5cf6;
  --secondary: #4b5563;
  --accent: #a78bfa;
  --radius: 1rem;
}